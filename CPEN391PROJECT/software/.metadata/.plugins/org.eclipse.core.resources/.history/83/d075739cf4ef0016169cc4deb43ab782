#include <stdio.h>
#include "graphic.h"


int prompt(){

	int x_offset = 50;
	int y_offset = 50;
	int x_centre = 400;
	int y_centre = 240;
	int radius = 100;

	write(x_offset, y_offset, "Are you Safe?", 16, WHITE, CYAN);
	write(x_offset, y_offset*2, "press the circle if you are!", 16, WHITE, CYAN);

	drawcircle(x_centre, y_centre, 100, LIME);

	int i;
	for (i = 99; i >= 0 ; i-- ){
		drawSolidcircle(x_centre,y_centre, radius - i, RED);
	}

	return 0;

}
